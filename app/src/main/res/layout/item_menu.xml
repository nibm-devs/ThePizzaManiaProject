<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/card_background_ripple">

        <!-- Item Image with Gradient Border -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/image_container_gradient"
            android:padding="3dp">

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_pizza_placeholder"
                android:contentDescription="Menu item image"
                android:background="@drawable/image_background" />

            <!-- Category Badge -->
            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:text="Pizza"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="@drawable/category_badge"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:layout_margin="4dp" />

        </FrameLayout>

        <!-- Text Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Margherita Pizza"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:letterSpacing="0.01" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Classic pizza with tomato sauce and fresh mozzarella cheese"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="2dp"
                android:lineSpacingExtra="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$12.99"
                    android:textColor="@color/primary_red"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/price_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4.5"
                    android:stepSize="0.5"
                    android:progressTint="@color/secondary_yellow"
                    android:progressBackgroundTint="@color/medium_gray"
                    android:isIndicator="true"
                    style="?android:attr/ratingBarStyleSmall" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingStart="8dp">

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_edit_rounded"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Edit item"
                app:tint="@color/info_blue" />

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_delete_rounded"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Delete item"
                android:layout_marginTop="4dp"
                app:tint="@color/error_red" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>