<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/orderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#1234567"
            android:textColor="#222"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/customerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donald Chavez"
            android:textColor="#222"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/ic_location2"
                android:layout_marginEnd="4dp"
                android:contentDescription="Location icon" />

            <TextView
                android:id="@+id/deliveryAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No.2 Jalan Hang Tuah 6/2\n25300 Kuantan,\nKuantan Pahang 25300 Malaysia"
                android:textColor="#555"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Left group: Picked-Up + Arrow -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btnPickedUp"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#FF3D00"
                    android:text="Picked-Up"
                    android:textColor="#fff"
                    android:textSize="13sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#FFFFFF">

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        android:layout_gravity="center">

                        <!-- FrameLayout to center the ImageButton -->
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:id="@+id/arrowButton"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:background="@android:color/transparent"
                                android:clickable="true"
                                android:contentDescription="Arrow Button"
                                android:focusable="true"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_direction2"
                                app:tint="#FF3D00" />

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Spacer to push phone button to right -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Right button: Phone -->
            <ImageButton
                android:id="@+id/phone"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/ic_contact"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Call Button"
                android:scaleType="centerInside"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/deliveryTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01:15PM"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#888"
                android:layout_marginStart="16dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
